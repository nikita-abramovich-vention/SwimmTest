@model DemoSwimmApp.Models.User
@{
    ViewData["Title"] = "Профиль пользователя";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>ID:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.Id
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Имя пользователя:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.Username
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Полное имя:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.FullName
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Email:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.Email
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <strong>Дата регистрации:</strong>
                    </div>
                    <div class="col-sm-9">
                        @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                    </div>
                </div>
                
                <hr />
                
                <div class="text-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">На главную</a>
                    <a asp-action="Logout" class="btn btn-secondary">Выйти</a>
                </div>
            </div>
        </div>
    </div>
</div>